			</nav>
			<h3 class="text-muted">WEB UI controller</h3>
		</div>
		<div class="row">
			<h2>&nbsp;</h2>
			<div id="message-top" class="alert alert-warning"></div>
			<div class="col-xs-offset-0 col-md-offset-0 col-xs-6 col-md-6 ">
				<div class="panel panel-default">
					<div class="panel-heading ">
						<h3 class="panel-title ">Joystick</h3>
					</div>
					<div class="panel-body ">
						<div id="joystick-content"></div>
						<script src="nipplejs.js" charset="utf-8"></script>
						<script>
						var absJoyPos = { "force" : "0" , "angle" : "0" , "dirAlpha" : "0" , "dirX" : "0" , "dirY" : "0" };
						
						
							function calcMotorPower( data ) {
								if( "force" in data )
								{
									var force = data.force;
									if( force > 1 ) force = 1;
									force = force * 100; // in percent								
									absJoyPos.force    = force;
								}
								
								if( "angle" in data )
									absJoyPos.angle    = data.angle.degree;
								absJoyPos.dirAlpha = data.direction.angle;
								absJoyPos.dirX     = data.direction.x;
								absJoyPos.dirY     = data.direction.y;
								
								//console.log( 'force: ' +  Math.round( force ) + '  alpha: ' + data.angle.degree );

							}
							
							
							/* ------------------ Joystic events ---------------------- */
							function bindNipple() {
								joystick
										.on('start end', function(evt, data) {
											calcMotorPower( data );
										})
										.on('move', function(evt, data) {
											calcMotorPower( data );
										})
										.on(
												'dir:up   plain:up   dir:left  plain:left'
											  + 'dir:down plain:down dir:right plain:right',
												function(evt, data) {
													calcMotorPower( data );
												}).on('pressure',
												function(evt, data) {
													calcMotorPower( data );
												});
							}

							/* ------------------ Joystic create ---------------------- */
							var joystick = nipplejs.create({
								zone : document
										.getElementById('joystick-content'),
								mode : 'static',
								position : {
									left : '50%',
									top : '50%'
								},
								color : 'green',
								size : 150
							});

							bindNipple();

							joystick.on('start move end dir plain', function(
									evt, nipple) {

								$("#jForce").html( "force: " + absJoyPos.force );
								$("#jAngle").html( "angle: " + absJoyPos.angle );
								$("#jDirAlpha").html("dirAlpha: " + absJoyPos.dirAlpha   );
								$("#jDirX").html("dirX: " + absJoyPos.dirX );
								$("#jDirY").html("dirY: " + absJoyPos.dirY );
								
								console.log( absJoyPos );
							});
						</script>
					</div>
				</div>
			</div>
